            \parbox[c][32mm]{30mm}{%
                \centering%
                \begin{varwidth}{30mm}%
                    \leavevmode%
                    {\raggedright\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor}%
                \end{varwidth}%
            }
        \end{textblock}%
    }
}

